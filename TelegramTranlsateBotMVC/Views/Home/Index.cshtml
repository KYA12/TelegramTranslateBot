@model List<TelegramTranslateBotMVC.Models.Word>
@{
    ViewData["Title"] = "Index";
}
<h2>List of words</h2>
<p>
    <a asp-action="AddWord">Create new record</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Original Word")
            </th>
            <th>
                @Html.DisplayName("Translated Word")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OriginalWord)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TranslatedWord)
            </td>

            <td>
                @Html.ActionLink("Edit Word", "EditWord", new { originalWord = item.OriginalWord }) |
                @Html.ActionLink("Delete Word", "DeleteWord", new { originalWord = item.OriginalWord })
            </td>
        </tr>
        }
    </tbody>
</table>