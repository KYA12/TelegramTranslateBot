@model TelegramTranslateBotMVC.Models.Word

<h4>Word</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditWord" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OriginalWord" class="control-label">Original Word</label>
                <input asp-for="OriginalWord" class="form-control" readonly="@(true)"/>
            </div>
            <div class="form-group">
                <label asp-for="TranslatedWord" class="control-label">Translated Word</label>
                <input asp-for="TranslatedWord" class="form-control" />
                <span asp-validation-for="TranslatedWord" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
