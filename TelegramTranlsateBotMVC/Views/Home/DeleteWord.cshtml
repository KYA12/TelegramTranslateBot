@model TelegramTranslateBotMVC.Models.Word

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Word</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Original Word")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OriginalWord)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Translated Word")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TranslatedWord)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
